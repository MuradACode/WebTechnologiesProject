@using BrandShop.Business.DTOs.ProductDto
@{
    ViewData["Title"] = "Create";
}

@model UpdateColorDto

<style>
    .form-label {
        font-size: 20px;
        color: #F1A634;
    }

    option[selected = "selected"] {
        background-color: #F1A634;
    }
</style>

<div class="content-body">
    <div class="container-fluid">
        <div class="col-xl-12 col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Düzəliş et</h4>
                </div>
                <div class="card-body">
                    <div class="basic-form">
                        <form method="post" asp-action="edit">
                            <div class="row">
                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="Name">Ad</label>
                                    <input asp-for="Name" class="form-control" placeholder="Ad">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>

                                <div class="mb-3 col-md-6">
                                    <label class="form-label" asp-for="ColorHexCode">HEX kod</label>
                                    <input asp-for="ColorHexCode" class="form-control" placeholder="HEX kod">
                                    <span asp-validation-for="ColorHexCode" class="text-danger"></span>
                                </div>
                            </div>

                           

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>




                            <button type="submit" class="btn btn-primary mt-3">Düzəliş et</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>