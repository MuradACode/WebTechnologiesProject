@{
    ViewData["Title"] = "Index";
    int count = 1;
}

@model List<Color>

<style>
    table td, table th {
        text-align: center;
        color: #FFFFFF;
    }



</style>

<div class="content-body">
    <div class="container-fluid">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h4 class="card-title">Profile Datatable</h4>
                    <a asp-controller="Color" asp-action="Create" class="d-flex align-items-center" style="padding: 10px; font-size: 18px; font-weight: 600; background-color: #FD7E14; color: #FFFFFF; border-radius: 10px;"><i class='bx bx-plus' style="font-size: 25px;"></i>Rəng yarat</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="display" style="min-width: 100%">
                            <thead style="background-color: #343A40;">

                                <tr>
                                    <th>№</th>
                                    <th>Ad</th>
                                    <th>HEX kod</th>
                                    <th>Silinib?</th>
                                    <th>Silinmə tarixi</th>
                                    <th>Duzəliş tarixi</th>
                                    <th>Hərəkətlər</th>
                                </tr>
                            </thead>
                            <tbody style="background-color: #343A40;">
                                @foreach (Color color in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td><i class='bx bxs-checkbox' style="color: @color.ColorHexCode;"></i>@color.Name</td>
                                        <td>@color.ColorHexCode</td>
                                        <td>
                                            @if (color.IsDeleted == true)
                                            {
                                                <span>Silinib</span>
                                            }

                                            @if (color.IsDeleted == false)
                                            {
                                                <span>Silinməyib</span>
                                            }
                                        </td>
                                        <td>
                                            @if (color.DeletedAt == null)
                                            {
                                                <span>Silinməyib</span>
                                            }

                                            @if (color.DeletedAt != null)
                                            {
                                                <span>@color.DeletedAt</span>
                                            }
                                        </td>
                                        <td>
                                            @if (color.UpdatedAt == null)
                                            {
                                                <span>Düzəliş edilməyib</span>
                                            }

                                            @if (color.UpdatedAt != null)
                                            {
                                                <span>@color.UpdatedAt</span>
                                            }
                                        </td>



                                        <td>
                                            <div class="d-flex justify-content-center">
                                                @if (!color.IsDeleted)
                                                {
                                                    <a asp-controller="Color" asp-action="Edit" asp-route-id="@color.Id" class="btn btn-success shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                                    <a asp-controller="Color" asp-action="Delete" asp-route-id="@color.Id" class="btn btn-danger shadow btn-xs sharp delete-btn me-1"><i class="fa fa-trash"></i></a>
                                                }

                                                <a asp-controller="Color" asp-action="Info" asp-route-id="@color.Id" class="btn btn-info shadow btn-xs sharp me-1"><i class="fas fa-info"></i></a>
                                            </div>
                                        </td>


                                    </tr>

                                    count++;
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>