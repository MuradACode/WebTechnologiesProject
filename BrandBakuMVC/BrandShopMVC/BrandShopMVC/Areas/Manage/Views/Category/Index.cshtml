@{
    ViewData["Title"] = "Index";
    int count = 1;
}

@model List<Category>

<style>
    table td, table th {
        text-align: center;
    }

</style>

<div class="content-body">
    <div class="container-fluid">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h4 class="card-title">Profile Datatable</h4>
                    <a asp-controller="Category" asp-action="Create" class="d-flex align-items-center" style="padding: 10px; font-size: 18px; font-weight: 600; background-color: #FD7E14; color: #FFFFFF; border-radius: 10px;"><i class='bx bx-plus' style="font-size: 25px;"></i>Kateqoriya yarat</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="display" style="min-width: 100%">
                            <thead>

                                <tr>
                                    <th>№</th>
                                    <th>Ad</th>
                                    <th>Silinib?</th>
                                    <th>Silinmə tarixi</th>
                                    <th>Duzəliş tarixi</th>
                                    <th>Hərəkətlər</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Category category in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@category.Name</td>
                                        <td>
                                            @if (category.IsDeleted == true)
                                            {
                                                <span>Silinib</span>
                                            }

                                            @if (category.IsDeleted == false)
                                            {
                                                <span>Silinməyib</span>
                                            }
                                        </td>
                                        <td>
                                            @if (category.DeletedAt == null)
                                            {
                                                <span>Silinməyib</span>
                                            }

                                            @if (category.DeletedAt != null)
                                            {
                                                <span>@category.DeletedAt</span>
                                            }
                                        </td>
                                        <td>
                                            @if (category.UpdatedAt == null)
                                            {
                                                <span>Düzəliş edilməyib</span>
                                            }

                                            @if (category.UpdatedAt != null)
                                            {
                                                <span>@category.UpdatedAt</span>
                                            }
                                        </td>



                                        <td>
                                            <div class="d-flex justify-content-center">
                                                @if(!category.IsDeleted)
                                                {
                                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger shadow btn-xs sharp delete-btn me-1"><i class="fa fa-trash"></i></a>
                                                }
                                                
                                                <a asp-controller="Category" asp-action="Info" asp-route-id="@category.Id" class="btn btn-info shadow btn-xs sharp me-1"><i class="fas fa-info"></i></a>
                                            </div>
                                        </td>


                                    </tr>

                                    count++;
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>