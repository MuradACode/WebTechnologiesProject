@{
    ViewData["Title"] = "Index";
    int count = 1;
}

@model List<Service>

<style>
    table td, table th {
        text-align: center;
    }

</style>

<div class="content-body">
    <div class="container-fluid">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h4 class="card-title">Profile Datatable</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="display" style="min-width: 100%">
                            <thead>

                                <tr>
                                    <th>№</th>
                                    <th>Icon</th>
                                    <th>Başlıq</th>
                                    <th>Duzəliş tarixi</th>
                                    <th>Hərəkətlər</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Service service in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td>@Html.Raw(service.Icon)</td>
                                        <td>@service.Title</td>

                                        <td>
                                            @if (service.UpdatedAt == null)
                                            {
                                                <span>Düzəliş edilməyib</span>
                                            }

                                            @if (service.UpdatedAt != null)
                                            {
                                                <span>@service.UpdatedAt</span>
                                            }
                                        </td>



                                        <td>
                                            <div class="d-flex justify-content-center">
                                                <a asp-controller="Service" asp-action="Edit" asp-route-id="@service.Id" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>

                                                <a asp-controller="Service" asp-action="Info" asp-route-id="@service.Id" class="btn btn-info shadow btn-xs sharp me-1"><i class="fas fa-info"></i></a>
                                            </div>
                                        </td>


                                    </tr>

                                    count++;
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>