@{
    ViewData["Title"] = "Index";
    int count = 1;
}

@model List<Brand>

<style>
    table td, table th {
        text-align: center;
    }

</style>

<div class="content-body">
    <div class="container-fluid">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h4 class="card-title">Profile Datatable</h4>
                    <a asp-controller="Brand" asp-action="Create" class="d-flex align-items-center" style="padding: 10px; font-size: 18px; font-weight: 600; background-color: #FD7E14; color: #FFFFFF; border-radius: 10px;"><i class='bx bx-plus' style="font-size: 25px;"></i>Brend yarat</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="display" style="min-width: 100%">
                            <thead>

                                <tr>
                                    <th>№</th>
                                    <th>Şəkil</th>
                                    <th>Ad</th>
                                    <th>Silinib?</th>
                                    <th>Silinmə tarixi</th>
                                    <th>Duzəliş tarixi</th>
                                    <th>Hərəkətlər</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Brand brand in Model)
                                {
                                    <tr>
                                        <td>@count</td>
                                        <td><img width="35" src="~/uploads/brands/@brand?.Image" /></td>
                                        <td>@brand.Name</td>
                                        <td>
                                            @if (brand.IsDeleted == true)
                                            {
                                                <span>Silinib</span>
                                            }

                                            @if (brand.IsDeleted == false)
                                            {
                                                <span>Silinməyib</span>
                                            }
                                        </td>
                                        <td>
                                            @if (brand.DeletedAt == null)
                                            {
                                                <span>Silinməyib</span>
                                            }

                                            @if (brand.DeletedAt != null)
                                            {
                                                <span>@brand.DeletedAt</span>
                                            }
                                        </td>
                                        <td>
                                            @if (brand.UpdatedAt == null)
                                            {
                                                <span>Düzəliş edilməyib</span>
                                            }

                                            @if (brand.UpdatedAt != null)
                                            {
                                                <span>@brand.UpdatedAt</span>
                                            }
                                        </td>



                                        <td>
                                            <div class="d-flex justify-content-center">
                                                <a asp-controller="Brand" asp-action="Edit" asp-route-id="@brand.Id" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                                <a asp-controller="Brand" asp-action="Delete" asp-route-id="@brand.Id" class="btn btn-danger shadow btn-xs sharp delete-btn me-1"><i class="fa fa-trash"></i></a>
                                                <a asp-controller="Brand" asp-action="Info" asp-route-id="@brand.Id" class="btn btn-info shadow btn-xs sharp me-1"><i class="fas fa-info"></i></a>
                                            </div>
                                        </td>


                                    </tr>

                                    count++;
                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>