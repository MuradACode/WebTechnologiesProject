@using BrandShop.Business.DTOs.AuthenticateDto
@model UpdateDto

<div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel"><i class="fas fa-lock"></i>Şifrə</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="Profile" method="post">
                    <div class="modal-body">
                        <div class="row">
                            <input type="hidden" asp-for="UserName" />
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="Address" />
                            <input type="hidden" asp-for="PhoneNumber" />
                            <div class="col-lg-6 col-md-12">
                                <div class="form-floating mb-3">
                                    <input type="password" class="form-control" id="nowPassword" asp-for="CurrentPassword" placeholder="John Doe">
                                    <label asp-for="CurrentPassword">Hal-hazırdakı şifrə</label>
                                    <span asp-validation-for="CurrentPassword"></span>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-12">
                                <div class="form-floating mb-3">
                                    <input type="password" asp-for="Password" class="form-control" id="newPassword"
                                        placeholder="name@example.com">
                                    <label asp-for="Password">Yeni şifrə</label>
                                    <span asp-validation-for="Password"></span>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="form-floating mb-3">
                                    <input type="password" asp-for="RepeatPassword" class="form-control" id="repeatPassword"
                                        placeholder="name@example.com">
                                    <label asp-for="RepeatPassword">Yeni şifrənin təkrarı</label>
                                    <span asp-validation-for="RepeatPassword"></span>
                                </div>
                            </div>

                            <div asp-validation-summary="ModelOnly"></div>




                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Bağla</button>
                        <button type="submit" class="btn" style="
                       color: #FFFFFF; background-color: #F1A634;">Yadda saxla</button>
                    </div>

                </form>


            </div>
        </div>