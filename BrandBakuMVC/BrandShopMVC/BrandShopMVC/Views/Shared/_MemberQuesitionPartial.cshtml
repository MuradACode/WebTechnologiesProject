@using BrandShop.Business.DTOs.HomeDto
@model QuestionDto

<div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title d-flex align-items-center" id="staticBackdropLabel"><i class="fa-solid fa-message-question"></i>Sual</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="Index" method="post">
                    <div class="modal-body">
                        <div class="row">
                            <input type="hidden" />
                            <div class="col-lg-6 col-md-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="FullName" class="form-control" id="fullName" placeholder="John Doe">
                                    <label asp-for="FullName">Ad və soyad</label>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-12">
                                <div class="form-floating mb-3">
                                    <input asp-for="Email" class="form-control" id="eMail" placeholder="name@example.com">
                                    <label asp-for="Email">Email adres</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>

                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="form-floating">
                                    <textarea asp-for="Text" class="form-control" placeholder="Sualınız" id="question"
                                        style="height: 100px"></textarea>
                                    <label asp-for="Text">Sualınız</label>
                                    <span asp-validation-for="Text" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Bağla</button>
                        <button type="submit" class="btn" style="
                       color: #FFFFFF; background-color: #F1A634;">Göndər</button>
                    </div>

                </form>


            </div>
        </div>