@using BrandShop.Business.DTOs.HeaderDto
@{
    Layout = null;
}

@model HeaderDto

<header class="fixed-top">
        <nav class="navbar navbar-expand-lg">
            <div class="container p-0">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="/assets/images/brandBakuLogo2.svg" alt="">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center active" aria-current="page" asp-controller="Home" asp-action="Index">
                                <i class='bx bx-home-smile'></i>Ana səhifə
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-controller="Product" asp-action="Shop">
                                <i class='bx bxl-shopify'></i>Alış-veriş
                            </a>
                        </li>

                        <li class="nav-item d-flex">
                            <a class="nav-link d-flex align-items-center position-relative p-0 m-0" asp-controller="Order"
                               asp-action="CheckOut">
                                <i class='bx bx-cart-alt'></i>
                                <span class="position-absolute top-0 start-100 translate-middle d-flex justify-content-center align-items-center rounded-circle" style="padding-left: 5px; padding-right: 5px; padding-top: 3px; padding-bottom: 3px; background-color: #F1A634; color: #FFFFFF;">
                                    <span class="visually" style="font-size: 13px;">@(Model.Basket?.BasketItems.Count()??0)</span>
                                </span>
                            </a>
                            <a class="nav-link d-flex align-items-center ps-0" asp-controller="Order" asp-action="CheckOut">
                                Səbət

                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link d-flex align-items-center" asp-controller="Wish" asp-action="WishList">
                                <i class='bx bx-heart'></i>Bəyəndiklərim
                            </a>
                        </li>

                        <li class="nav-item account">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link d-flex align-items-center"><i class='bx bx-user'></i>@User.Identity.Name</a>

                                <ul>
                                    <li>
                                        <a asp-controller="Authenticate" asp-action="Profile">
                                            <i class='bx bx-user-circle'></i>Profil
                                        </a>
                                    </li>

                                    <li>
                                        <a asp-controller="Authenticate" asp-action="Logout">
                                            <i class='bx bx-log-out-circle'></i>Çıxış
                                        </a>
                                    </li>
                                </ul>
                            }

                            else
                            {
                                <a class="nav-link d-flex align-items-center" asp-controller="Authenticate" asp-action="SignIn"><i class='bx bx-user'></i>Hesab</a>
                            }

                        </li>
                    </ul>
                    <form class="search-form" role="search">
                        <input class="form-control me-2" type="search" placeholder="Axtar..." aria-label="Search">
                        <button class="btn" type="submit"><i class='bx bx-search-alt-2'></i></button>
                    </form>
                </div>
            </div>
        </nav>
    </header>